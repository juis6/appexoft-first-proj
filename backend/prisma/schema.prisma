generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model SearchHistory {
  id        Int      @id @default(autoincrement())
  query     String
  timestamp DateTime @default(now())
  
  @@index([timestamp])
  @@index([query])
  @@map("search_history")
}
